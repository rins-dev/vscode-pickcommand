{
	"name": "pickcommand",
	"displayName": "PickCommand",
	"description": "Easy to run configured scripts with quick pick.",
	"version": "0.1.2",
	"publisher": "rins",
	"repository":{
		"url": "https://github.com/rins-dev/vscode-pickcommand"
	},
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:pickcommand.pickAllCommand",
		"onCommand:pickcommand.pickDefaultCommand",
		"onCommand:pickcommand.shortcut1",
		"onCommand:pickcommand.shortcut2",
		"onCommand:pickcommand.shortcut3",
		"onCommand:pickcommand.shortcut4",
		"onCommand:pickcommand.shortcut5",
		"onCommand:pickcommand.shortcut6",
		"onCommand:pickcommand.shortcut7",
		"onCommand:pickcommand.shortcut8",
		"onCommand:pickcommand.shortcut9"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "PickCommand",
			"properties": {
				"pickcommand.constant": {
					"type": "object",
					"markdownDescription": "The constant context used for all commands.",
					"propertyNames": {
						"pattern": "^[_a-zA-Z][_0-9a-zA-Z]*$"
					}
				},
				"pickcommand.context": {
					"type": "object",
					"markdownDescription": "The context used for all commands.",
					"propertyNames": {
						"pattern": "^[_a-zA-Z][_0-9a-zA-Z]*$"
					}
				},
				"pickcommand.commands": {
					"type": "object",
					"markdownDescription": "Command Definitions",
					"additionalProperties": {
						"type": "object",
						"properties": {
							"command": {
								"type": "string",
								"markdownDescription": "The command will be executed. It also could be command for vscode.",
								"examples": [
									"pickcommand.runInChildProcess",
									"pickcommand.runInJs",
									"pickcommand.runInTerminal",
									"pickcommand.showCommands",
									"pickcommand.createCommand"
								]
							},
							"when": {
								"default": true,
								"markdownDescription": "The condition for current command."
							},
							"context": {
								"default": {},
								"markdownDescription": "The context used for current command."
							},
							"label": {
								"markdownDescription": "You can refer to [vscode.QuickPickItem](https://code.visualstudio.com/api/references/vscode-api#QuickPickItem) for more information."
							},
							"description": {
								"markdownDescription": "You can refer to [vscode.QuickPickItem](https://code.visualstudio.com/api/references/vscode-api#QuickPickItem) for more information."
							},
							"detail": {
								"markdownDescription": "You can refer to [vscode.QuickPickItem](https://code.visualstudio.com/api/references/vscode-api#QuickPickItem) for more information."
							},
							"priority": {
								"type": "number",
								"default": 100,
								"markdownDescription": "The sort priority of the commands. The bigger one comes first."
							}
						},
						"required": [
							"command"
						],
						"allOf": [
							{
								"if": {
									"properties": {
										"command": {
											"const": "pickcommand.runInChildProcess"
										}
									}
								},
								"then": {
									"properties": {
										"script": {},
										"separator": {},
										"encoding": {},
										"shell": {},
										"maxBuffer": {},
										"killSignal": {},
										"windowsHide": {},
										"timeout": {},
										"uid": {},
										"gid": {},
										"cwd": {},
										"env": {}
									},
									"required": [
										"script"
									]
								}
							},
							{
								"if": {
									"properties": {
										"command": {
											"const": "pickcommand.runInJs"
										}
									}
								},
								"then": {
									"properties": {
										"script": {},
										"separator": {}
									}
								}
							},
							{
								"if": {
									"properties": {
										"command": {
											"const": "pickcommand.runInTerminal"
										}
									}
								},
								"then": {
									"properties": {
										"script": {},
										"separator": {},
										"terminal": {}
									}
								}
							},
							{
								"if": {
									"properties": {
										"command": {
											"const": "pickcommand.showCommands"
										}
									}
								},
								"then": {
									"properties": {
										"commands": {
											"type": "object"
										}
									},
									"required": [
										"commands"
									]
								}
							},
							{
								"if": {
									"properties": {
										"command": {
											"const": "pickcommand.createCommand"
										}
									}
								},
								"then": {
									"properties": {
										"value": {},
										"args": {
											"type": "array"
										}
									},
									"required": [
										"value"
									]
								}
							}
						]
					}
				},
				"pickcommand.shortcut1": {
					"type": "string",
					"markdownDescription": "The key of the `#pickcommand.commands#` associated with."
				},
				"pickcommand.shortcut2": {
					"type": "string",
					"markdownDescription": "The key of the `#pickcommand.commands#` associated with."
				},
				"pickcommand.shortcut3": {
					"type": "string",
					"markdownDescription": "The key of the `#pickcommand.commands#` associated with."
				},
				"pickcommand.shortcut4": {
					"type": "string",
					"markdownDescription": "The key of the `#pickcommand.commands#` associated with."
				},
				"pickcommand.shortcut5": {
					"type": "string",
					"markdownDescription": "The key of the `#pickcommand.commands#` associated with."
				},
				"pickcommand.shortcut6": {
					"type": "string",
					"markdownDescription": "The key of the `#pickcommand.commands#` associated with."
				},
				"pickcommand.shortcut7": {
					"type": "string",
					"markdownDescription": "The key of the `#pickcommand.commands#` associated with."
				},
				"pickcommand.shortcut8": {
					"type": "string",
					"markdownDescription": "The key of the `#pickcommand.commands#` associated with."
				},
				"pickcommand.shortcut9": {
					"type": "string",
					"markdownDescription": "The key of the `#pickcommand.commands#` associated with."
				}
			}
		},
		"commands": [
			{
				"command": "pickcommand.pickAllCommand",
				"title": "Pick all commands",
				"category": "PickCommand"
			},
			{
				"command": "pickcommand.pickDefaultCommand",
				"title": "Pick default command",
				"category": "PickCommand"
			},
			{
				"command": "pickcommand.shortcut1",
				"title": "Pick command shortcut1",
				"category": "PickCommand"
			},
			{
				"command": "pickcommand.shortcut2",
				"title": "Pick command shortcut2",
				"category": "PickCommand"
			},
			{
				"command": "pickcommand.shortcut3",
				"title": "Pick command shortcut3",
				"category": "PickCommand"
			},
			{
				"command": "pickcommand.shortcut4",
				"title": "Pick command shortcut4",
				"category": "PickCommand"
			},
			{
				"command": "pickcommand.shortcut5",
				"title": "Pick command shortcut5",
				"category": "PickCommand"
			},
			{
				"command": "pickcommand.shortcut6",
				"title": "Pick command shortcut6",
				"category": "PickCommand"
			},
			{
				"command": "pickcommand.shortcut7",
				"title": "Pick command shortcut7",
				"category": "PickCommand"
			},
			{
				"command": "pickcommand.shortcut8",
				"title": "Pick command shortcut8",
				"category": "PickCommand"
			},
			{
				"command": "pickcommand.shortcut9",
				"title": "Pick command shortcut9",
				"category": "PickCommand"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "pickcommand.pickAllCommand",
					"alt": "pickcommand.pickDefaultCommand",
					"group": "navigation"
				}
			],
			"editor/title/context": [
				{
					"command": "pickcommand.pickAllCommand",
					"alt": "pickcommand.pickDefaultCommand",
					"group": "navigation"
				}
			],
			"scm/resourceFolder/context": [
				{
					"command": "pickcommand.pickAllCommand",
					"alt": "pickcommand.pickDefaultCommand",
					"group": "navigation"
				}
			],
			"scm/resourceState/context": [
				{
					"command": "pickcommand.pickAllCommand",
					"alt": "pickcommand.pickDefaultCommand",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
